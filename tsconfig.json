{
  "compilerOptions": {
    /* Base Environment */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    /* Strictness & Safety */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,

    /* Project Setup */
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "packages/**/*.ts", "eslint.config.ts", "types/declarations.d.ts"],
  "exclude": ["node_modules", "**/dist/**", "**/build/**"]
}
